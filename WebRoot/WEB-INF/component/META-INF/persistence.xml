<?xml version="1.0" encoding="utf-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">
      <persistence-unit name="db_lms">
            <properties> 
                  <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect"/>  
                  <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>  
                  <property name="hibernate.connection.username" value="root"/>  
                  <property name="hibernate.connection.password" value="123"/>  
                  <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3406/db_lms?useUnicode=true&amp;characterEncoding=UTF-8"/>  
                  <property name="hibernate.connection.provider_class" value="com.sunsheen.jfids.system.base.datasource.DruidConnectionProvider"/>  
                  <property name="hibernate.connection.filters" value="format,log4j,stat"/>  
                  <property name="hibernate.connection.maxActive" value="20"/>  
                  <property name="hibernate.connection.initialSize" value="1"/>  
                  <property name="hibernate.connection.maxWait" value="60000"/>  
                  <property name="hibernate.connection.minIdle" value="1"/>  
                  <property name="hibernate.connection.timeBetweenEvictionRunsMillis" value="3000"/>  
                  <property name="hibernate.connection.minEvictableIdleTimeMillis" value="300000"/>  
                  <property name="hibernate.connection.validationQuery" value="SELECT 1"/>  
                  <property name="hibernate.connection.testWhileIdle" value="true"/>  
                  <property name="hibernate.connection.testOnBorrow" value="false"/>  
                  <property name="hibernate.connection.testOnReturn" value="false"/>  
                  <property name="hibernate.connection.poolPreparedStatements" value="true"/>  
                  <property name="hibernate.connection.maxPoolPreparedStatementPerConnectionSize" value="20"/>  
                  <property name="hibernate.show_sql" value="true"/>  
                  <property name="hibernate.format_sql" value="false"/>  
                  <property name="hibernate.max_fetch_depth" value="1"/>  
                  <property name="hibernate.jdbc.batch_versioned_data" value="true"/>  
                  <property name="hibernate.jdbc.use_streams_for_binary" value="true"/>  
                  <property name="hibernate.cache.region_prefix" value="hibernate.test"/>  
                  <property name="hibernate.cache.provider_class" value="org.hibernate.cache.HashtableCacheProvider"/>  
                  <property name="hibernate.current_session_context_class" value="thread"/>  
                  <property name="defaultDatabase" value="true"/>
            </properties>
      </persistence-unit>
</persistence>
